  "dependencies": {
    "eslint-config-prettier": "*",
    "eslint-plugin-prettier": "^5.0.0"
  },
  "peerDependencies": {
    "@eslint/js": "^9.0.0",
    "angular-eslint": "^18.0.0 || ^19.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "*",
    "typescript-eslint": "^8.0.0"
