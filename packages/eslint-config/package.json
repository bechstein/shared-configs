{
  "name": "@bechstein/eslint-config",
  "version": "2.0.1",
  "description": "Universal shareable ESLint configuration",
  "exports": {
    "./angular": {
      "import": "./angular/index.mjs",
      "require": "./angular/index.js"
    },
    "./typescript/recommended": {
      "import": "./typescript/recommended/index.mjs",
      "require": "./typescript/recommended/index.js"
    },
    "./typescript/strict": {
      "import": "./typescript/strict/index.mjs",
      "require": "./typescript/strict/index.js"
    }
  },
  "files": [
    "angular/**",
    "LICENSE.txt",
    "typescript/recommended/**",
    "typescript/strict/**"
  ],
  "scripts": {
    "prepublishOnly": "cp ../../LICENSE.txt ./LICENSE.txt",
    "postpublish": "rm -rf ./LICENSE.txt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bechstein/shared-configs.git"
  },
  "keywords": [
    "eslint",
    "config",
    "shared"
  ],
  "author": "C. Bechstein Digital GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bechstein/shared-configs/issues"
  },
  "homepage": "https://github.com/bechstein/shared-configs#readme",
  "dependencies": {
    "eslint-config-prettier": "*"
  },
  "peerDependencies": {
    "@eslint/js": "^9.0.0",
    "angular-eslint": "^18.0.0 || ^19.0.0",
    "eslint": "^9.0.0",
    "typescript": "*",
    "typescript-eslint": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "angular-eslint": {
      "optional": true
    }
  }
}
